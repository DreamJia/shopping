<view class="wrap"><view class="shopcar-list"><block wx:for="{{carData}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{item.commodity}}"><view class="list-item"><view class="car-check"><evan-checkbox vue-id="{{'1-'+index}}" primary-color="#d81e06" value="{{item.checked}}" data-event-opts="{{[['^change',[['checkChange',['$0'],[[['carData','',index]]]]]],['^input',[['__set_model',['$0','checked','$event',[]],[[['carData','',index]]]]]]]}}" bind:change="__e" bind:input="__e" bind:__l="__l"></evan-checkbox></view><view class="car-img"><image src="{{item.commodity.commodity_img}}" mode></image></view><view class="car-msg"><view class="car-msg-name">{{''+item.commodity.commodity_name+''}}</view><view class="car-msg-price"><view class="msg-price-left">￥<text>{{item.commodity.price/100}}</text></view><view class="msg-price-right"><uni-number-box vue-id="{{'2-'+index}}" min="{{1}}" value="{{item.number}}" data-event-opts="{{[['^change',[['bindChange',['$0'],[[['carData','',index]]]]]],['^input',[['__set_model',['$0','number','$event',[]],[[['carData','',index]]]]]]]}}" bind:change="__e" bind:input="__e" bind:__l="__l"></uni-number-box><image class="delete" src="../../static/img/close.png" mode data-event-opts="{{[['tap',[['remove',['$0'],[[['carData','',index]]]]]]]}}" bindtap="__e"></image></view></view></view></view></block></block></view><view class="car-option"><view class="option-left"><view style="margin-right:30rpx;"><evan-checkbox vue-id="3" primary-color="#d81e06" value="{{allCheck}}" data-event-opts="{{[['^change',[['allChange']]],['^input',[['__set_model',['','allCheck','$event',[]]]]]]}}" bind:change="__e" bind:input="__e" bind:__l="__l" vue-slots="{{['default']}}">全选</evan-checkbox></view><view class="all-price">总计：
				￥<text>{{totalPrice}}</text></view></view><view class="option-right"><block wx:if="{{totalPrice}}"><view data-event-opts="{{[['tap',[['toSettlement',['$event']]]]]}}" class="option-btn-on" bindtap="__e">去结算</view></block><block wx:if="{{!totalPrice}}"><view class="option-btn-off">去结算</view></block></view></view></view>